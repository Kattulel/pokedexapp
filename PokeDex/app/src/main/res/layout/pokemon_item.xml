<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:background="#00000000"
    app:cardBackgroundColor="#9C0F0F"
    app:cardCornerRadius="8dp">

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="72dp"
        android:background="@android:drawable/btn_star_big_on" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:alpha="1"
        android:visibility="visible">

        <TextView
            android:id="@+id/item_imageview_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center|center_vertical"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="18"
            android:text="nome"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:fontFamily="@font/lato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_imageview_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="12dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:elevation="5dp"
            android:transitionName="profile"
            app:layout_constraintBottom_toBottomOf="@+id/item_imageview_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/bulbasaur" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>